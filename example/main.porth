include "std.porth"
include "../http.porth"

memory count sizeof(u64) end

proc handle_request
  int ptr // Route
  int // connfd
in
  let route_size route fd in
    route_size route fd "./public"c http::static
  end
end
proc main in
  0 0 0 0 3000 http::create_server
  addr-of handle_request swap http::listen
end
